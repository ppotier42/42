CC = gcc

CFLAGS = -Wall -Werror -Wextra

OBJ = $(SRC:.c=.o)

NAME = libft.a

SRC = 	ft_atoi.c \
		ft_is_sign.c \
		ft_bzero.c \
		ft_isalnum.c \
		ft_isalpha.c \
		ft_isascii.c \
		ft_isdigit.c \
		ft_isprint.c \
		ft_putchar_fd.c \
		ft_putendl_fd.c \
		ft_putstr_fd.c \
		ft_putnbr_fd.c \
		ft_strchr.c \
		ft_strjoin.c \
		ft_strlcat.c \
		ft_strlen.c \
		ft_strlen_until.c \
		ft_strcmp.c \
		ft_strncmp.c \
		ft_strrchr.c \
		ft_tolower.c \
		ft_toupper.c \
		ft_memchr.c \
		ft_memcmp.c \
		ft_memcpy.c \
		ft_memset.c \
		ft_memmove.c \
		ft_calloc.c \
		ft_strdup.c \
		ft_strnstr.c \
		ft_strlcpy.c \
		ft_substr.c \
		ft_itoa.c \
		ft_striteri.c \
		ft_strmapi.c \
		ft_max.c \
		ft_strtrim.c \
		ft_split.c \
		ft_add.c \
		ft_hex.c \
		ft_printf.c \
		ft_nbrlen.c \
		ft_nbrlen_un.c \
		ft_putnbr_un.c \
		get_next_line.c \
		ft_lstnew.c \
		ft_lstadd_front.c \
		ft_lstsize.c \
		ft_lstlast.c \
		ft_lstadd_back.c \
		ft_strlen_until.c \
		ft_lstdelone.c \
		ft_lstclear.c \
		ft_lstiter.c \
		ft_lstmap.c \
		ft_count_word.c \
		get_next_line_utils.c \

all: $(NAME)

$(NAME):	$(OBJ)
			ar -rcs $(NAME) $(OBJ)

.c .o:
		$(CC) $(CFLAGS) -c $< -o $(<:.c=.o)

RM = rm -f

clean:
		$(RM) $(OBJ) $(BONUS_OBJ)

fclean:	clean
		$(RM) $(NAME)

re:		fclean all

.PHONY:	all clean fclean re bonus